<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#000">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:text="货品查询"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_clearStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="清除"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_searchStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="搜索"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:layout_marginRight="70dp"/>
        <TextView
            android:id="@+id/tv_addStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="+"
            android:textColor="#ffffffff"
            android:textSize="40dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="款号"
                android:textColor="#796400"
                android:textSize="14dp"/>
            <EditText
                android:id="@+id/et_code"
                android:layout_width="75dip"
                android:layout_height="35dip"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="8dp"
                android:padding="5dip"
                android:singleLine="true"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类别"
                android:textColor="#796400"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/et_class"
                android:layout_width="75dip"
                android:layout_height="36dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季节"
                android:textColor="#796400"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spinner_season"
                android:layout_width="75dip"
                android:layout_height="35dip"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="8dp"
                android:padding="5dip"
                android:entries="@array/spingseason"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="#796400"
                android:textSize="14dp"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="75dip"
                android:layout_height="35dip"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="8dp"
                android:padding="5dip"
                android:singleLine="true"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌"
                android:textColor="#796400"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/et_brandid"
                android:layout_width="75dip"
                android:layout_height="35dip"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="8dp"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textColor="#796400"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spinner_status"
                android:layout_width="75dip"
                android:layout_height="36dip"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="8dp"
                android:padding="5dp"
                android:entries="@array/spingstatus"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前总计："
            android:textColor="#796400"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/count_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#F00"
            android:textSize="14dp"
            android:inputType="number"/>
    </LinearLayout>

    <com.smyhvae.view.XListView
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
    </com.smyhvae.view.XListView>

</LinearLayout>
