    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单号"
                    android:textColor="#796400"
                    android:textSize="14dp"/>
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="80dp"
                    android:layout_height="35dip"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bg_edittext"
                    android:singleLine="true"
                    android:numeric="integer"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始"
                    android:textColor="#796400"
                    android:textSize="14dp"/>
                <EditText
                    android:id="@+id/et_start"
                    android:layout_width="wrap_content"
                    android:layout_height="35dip"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bg_edittext"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束"
                    android:textColor="#796400"
                    android:textSize="14dp"/>
                <EditText
                    android:id="@+id/et_end"
                    android:layout_width="wrap_content"
                    android:layout_height="35dip"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bg_edittext"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    android:textColor="#796400"
                    android:textSize="14dp"/>

                <Spinner
                android:id="@+id/et_status"
                android:layout_width="80dp"
                android:layout_height="33dip"
                android:background="@drawable/bg_edittext"
                android:singleLine="true"
                android:entries="@array/billstatus"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户"
                    android:textColor="#796400"
                    android:textSize="14dp"/>
                <EditText
                    android:id="@+id/et_clientid"
                    android:layout_width="wrap_content"
                    android:layout_height="33dip"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bg_edittext"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textColor="#796400"
                    android:textSize="14dp"/>
                <EditText
                    android:id="@+id/et_class"
                    android:layout_width="wrap_content"
                    android:layout_height="33dip"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bg_edittext"
                    android:singleLine="true"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:background="#FFE6D9"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号"
            android:textColor="#796400"/>
        <TextView
            android:id="@+id/tv_occurrencetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textColor="#796400"/>
        <TextView
            android:id="@+id/tv_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户"
            android:textColor="#796400"/>
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="#796400"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textColor="#796400"/>
        <TextView
            android:id="@+id/tv_realmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收"
            android:textColor="#796400"/>
        <TextView
            android:id="@+id/tv_paymentString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方式"
            android:textColor="#796400"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:visibility="gone"
            android:id="@+id/auto_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/list_bg" />
    </RelativeLayout>


    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_gray_b"
        android:layout_weight="1"
        android:id="@+id/swipeToLoadLayout">


        <com.smyhvae.view.SwipeView.CustomRefreshHeadView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/swipe_refresh_header"/>

        <com.smyhvae.view.XRecycleView.XRecycleView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="1">
        </com.smyhvae.view.XRecycleView.XRecycleView>


        <com.smyhvae.view.SwipeView.CustomLoadMoreView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/swipe_load_more_footer"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/blue"/>


    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>


