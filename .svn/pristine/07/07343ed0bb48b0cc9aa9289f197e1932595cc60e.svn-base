<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smyhvae.myapplication.PaymentActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/backView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/saddleBrown"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/paymentinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="支付信息"
                android:textColor="#8B4513"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/payView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"

                android:text="支付"
                android:textColor="@color/saddleBrown"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="50dp"
            android:background="#A7A5A5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/clientString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户"
                    android:textColor="#8B4513"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_clientString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/arrearsString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="欠款"
                    android:textColor="#8B4513"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_arrears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:focusable="false"
                    android:padding="5dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本单应收"
                    android:textColor="#8B4513"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_totalString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:focusable="false"
                    android:padding="5dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/finalTotalString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="实收"
                    android:textColor="#8B4513"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_finalTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:focusable="false"
                    android:padding="5dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalSumString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计应收"
                    android:textColor="#8B4513"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_totalSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:focusable="false"
                    android:padding="5dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="200dp"
            android:background="#A7A5A5" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="210dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠信息" />

                    <LinearLayout
                        android:id="@+id/money_fix_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付信息" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="现金"
                                android:textColor="#8B4513"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/cash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_edittext"
                                android:hint="请填写金额"
                                android:inputType="numberSigned"
                                android:padding="8dp"
                                android:singleLine="true"
                                android:textSize="14dp" />

                            <Button
                                android:id="@+id/cashButton"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="#8B4513"
                                android:text="全额"
                                android:textColor="#FFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="刷卡"
                                android:textColor="#8B4513"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/swingCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_edittext"
                                android:hint="请填写金额"
                                android:inputType="numberSigned"
                                android:padding="8dp"
                                android:singleLine="true"
                                android:textSize="14dp" />

                            <Button
                                android:id="@+id/swingCardButton"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="#8B4513"
                                android:text="全额"
                                android:textColor="#FFF"
                                android:textSize="16dp" />

                            <Spinner
                                android:id="@+id/spinner_bank1"
                                android:layout_width="100dp"
                                android:layout_height="35dip"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/bg_edittext"
                                android:padding="5dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="汇款"
                                android:textColor="#8B4513"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/remit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_edittext"
                                android:hint="请填写金额"
                                android:inputType="numberSigned"
                                android:padding="8dp"
                                android:singleLine="true"
                                android:textSize="14dp" />

                            <Button
                                android:id="@+id/remitButton"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="#8B4513"
                                android:text="全额"
                                android:textColor="#FFF"
                                android:textSize="16dp" />

                            <Spinner
                                android:id="@+id/spinner_bank2"
                                android:layout_width="100dp"
                                android:layout_height="35dip"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/bg_edittext"
                                android:padding="5dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="支付宝"
                                android:textColor="#8B4513"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/alipay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_edittext"
                                android:hint="请填写金额"
                                android:inputType="numberSigned"
                                android:padding="8dp"
                                android:singleLine="true"
                                android:textSize="14dp" />

                            <Button
                                android:id="@+id/alipayButton"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="#8B4513"
                                android:text="全额"
                                android:textColor="#FFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="微信支付"
                                android:textColor="#8B4513"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/wechatpay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_edittext"
                                android:hint="请填写金额"
                                android:inputType="numberSigned"
                                android:padding="8dp"
                                android:singleLine="true"
                                android:textSize="14dp" />

                            <Button
                                android:id="@+id/wechatpayButton"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="#8B4513"
                                android:text="全额"
                                android:textColor="#FFF"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>
