<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/salesbilllist_lay"
    android:descendantFocusability="blocksDescendants">

    <View
        android:id="@+id/salesbill_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray_000"
        android:layout_marginTop="35dp"
        android:visibility="gone"/>

    <com.smyhvae.view.SwipeListLayout
        android:id="@+id/sll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#66ff0000"
                android:gravity="center"
                android:text="编辑"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_disable"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#330000ff"
                android:gravity="center"
                android:text="作废" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:id="@+id/list_lay">
            <TextView
                android:id="@+id/salesbill_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/salesbill_occurrencetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="16dp"
                android:ellipsize="end"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/salesbill_clientstring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="16dp"
                android:ellipsize="end"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/salesbill_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#2E8B57"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/salesbill_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="16dp"
                android:ellipsize="end"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/salesbill_realmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#F00"
                android:textSize="16dp"
                android:ellipsize="end"
                android:singleLine="true"/>
            <LinearLayout
                android:id="@+id/lay_paymentString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/salesbill_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:ellipsize="end"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/salesbill_swingCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:ellipsize="end"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/salesbill_remit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:ellipsize="end"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </com.smyhvae.view.SwipeListLayout>
</RelativeLayout>
