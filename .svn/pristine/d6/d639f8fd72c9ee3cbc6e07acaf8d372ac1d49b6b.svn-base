<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/salesbill_listtable">
    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#000">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:text="销售开单"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/backview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/backview"
            android:onClick="onClick"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/print"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/print"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_addSalesBill"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="保存"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">
        <include
            layout="@layout/salesbill_top"
            android:id="@+id/salesbill_top"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#A7A5A5"/>

        <include
            layout="@layout/table_title"
            android:id="@+id/table_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#A7A5A5"/>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/sv"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/lay">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablay">
                    <!--<HorizontalScrollView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:id="@+id/hsv">-->
                        <!--<TableRow-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:id="@+id/tabRow">-->
                            <!--<LinearLayout-->
                                <!--android:layout_width="fill_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:orientation="vertical"-->
                                <!--android:id="@+id/lay_content">-->
                                <!--<include-->
                                    <!--layout="@layout/list_item_salesbilllist"-->
                                    <!--android:id="@+id/salesbilllist"/>-->
                                <!--<View-->
                                    <!--android:layout_width="fill_parent"-->
                                    <!--android:layout_height="1dip"-->
                                    <!--android:background="#A7A5A5"/>-->
                            <!--</LinearLayout>-->

                        <!--</TableRow>-->
                    <!--</HorizontalScrollView>-->
                </TableLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/acLay"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stylecodeForAc"
                        android:hint="输入款号"
                        android:textSize="16dp"
                        android:textColor="#000"
                        android:background="@drawable/bg_edittext"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include
        layout="@layout/salesbill_footer"
        android:id="@+id/salesbill_footer"/>
</RelativeLayout>
