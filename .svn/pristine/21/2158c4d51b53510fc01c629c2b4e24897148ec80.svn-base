<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/deleteView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/deleteview"/>
            <TextView
                android:id="@+id/selectinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选款信息"
                android:textSize="20dp"
                android:textColor="#8B4513"
                android:layout_gravity="bottom"/>
            <ImageView
                android:id="@+id/addView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">
            <com.smyhvae.view.ImageViewSubClass
                android:id="@+id/styleImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="款号："
                        android:textSize="14dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/stylecode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/line1"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@drawable/line"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pricetypeString"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="销售价："
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="562"/>
                        <TextView
                            android:id="@+id/line2"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@drawable/line"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称："
                        android:textSize="14dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/styleString"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/line3"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@drawable/line"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总库存："
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/line4"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@drawable/line"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <com.smyhvae.view.ScrollablePanel
            android:id="@+id/scrollable_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="190dp"/>
    </RelativeLayout>

</FrameLayout>