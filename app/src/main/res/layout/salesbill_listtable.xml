<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:id="@+id/salesbill_listtable">
    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:text="销售开单"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/back_SalesBill"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/TV_clearData"
            android:layout_marginStart="20dp"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="清空"/>

        <TextView
            android:id="@+id/print"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:gravity="center"
            android:text="打印"/>
        <ImageView
            android:id="@+id/backview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/backview"
            android:onClick="onClick"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
        <!--<ImageView
            android:id="@+id/print"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/print"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>-->
        <TextView
            android:id="@+id/tv_addSalesBill"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="保存"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">


        <include
            layout="@layout/salesbill_top"
            android:id="@+id/salesbill_top"/>

        <include
            layout="@layout/table_title"
            android:id="@+id/table_title"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/sv"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/lay">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablay">
                    <!--<HorizontalScrollView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:id="@+id/hsv">-->
                        <!--<TableRow-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:id="@+id/tabRow">-->
                            <!--<LinearLayout-->
                                <!--android:layout_width="fill_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:orientation="vertical"-->
                                <!--android:id="@+id/lay_content">-->
                                <!--<include-->
                                    <!--layout="@layout/list_item_salesbilllist"-->
                                    <!--android:id="@+id/salesbilllist"/>-->
                                <!--<View-->
                                    <!--android:layout_width="fill_parent"-->
                                    <!--android:layout_height="1dip"-->
                                    <!--android:background="#A7A5A5"/>-->
                            <!--</LinearLayout>-->

                        <!--</TableRow>-->
                    <!--</HorizontalScrollView>-->
                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/acLay"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stylecodeForAc"
                        android:gravity="center"
                        android:hint="请输入款号"
                        android:textSize="16dp"

                        android:textColor="#000"
                        android:background="@drawable/bg_edittext"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="20dp"/>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/plus"
                        android:id="@+id/TV_addStyle"/>

                    <!--<TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/TV_addStyle"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="30dp"
                        android:clickable="true"
                        android:visibility="visible"/>-->
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/TV_null"
                    android:background="@color/white"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include
        layout="@layout/salesbill_footer"
        android:id="@+id/salesbill_footer"/>
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RL_ACstyle">

    </RelativeLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_ac"
        android:id="@+id/RL_ACstyle"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:visibility="gone">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LL_ACclient"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="50dp"
        android:visibility="gone"
        android:background="@drawable/bg_ac"
        >
    </LinearLayout>

</RelativeLayout>
