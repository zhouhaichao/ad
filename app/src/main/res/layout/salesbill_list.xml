    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单号"
                    style="@style/TextView"/>
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="80dp"
                    android:layout_height="35dip"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:numeric="integer"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始"
                    style="@style/TextView"/>
                <EditText
                    android:id="@+id/et_start"
                    android:layout_width="wrap_content"
                    android:layout_height="35dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginLeft="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束"
                    style="@style/TextView"/>
                <EditText
                    android:id="@+id/et_end"
                    android:layout_width="wrap_content"
                    android:layout_height="35dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginLeft="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    style="@style/TextView"/>

                <Spinner
                android:id="@+id/et_status"
                android:layout_width="80dp"
                android:layout_height="33dip"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:singleLine="true"
                android:entries="@array/billstatus"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户"
                    style="@style/TextView"/>
                <EditText
                    android:id="@+id/et_clientid"
                    android:layout_width="wrap_content"
                    android:layout_height="33dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginLeft="5dp"
                    android:imeOptions="actionSearch"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    style="@style/TextView"/>
                <EditText
                    android:id="@+id/et_class"
                    android:layout_width="wrap_content"
                    android:layout_height="33dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#FFE6D9"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号"
            style="@style/TextViewGold"/>
        <TextView
            android:id="@+id/tv_occurrencetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            style="@style/TextViewGold"/>
        <TextView
            android:id="@+id/tv_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户"
            style="@style/TextViewGold"/>
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            style="@style/TextViewGold"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            style="@style/TextViewGold"/>
        <TextView
            android:id="@+id/tv_realmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收"
            style="@style/TextViewGold"/>
        <TextView
            android:id="@+id/tv_paymentString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方式"
            style="@style/TextViewGold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:visibility="gone"
            android:id="@+id/auto_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/list_bg" />
    </RelativeLayout>


    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/swipeToLoadLayout">


        <com.smyhvae.view.SwipeView.CustomRefreshHeadView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/border_clo"
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/swipe_refresh_header"/>

        <com.smyhvae.view.XRecycleView.XRecycleView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="1">
        </com.smyhvae.view.XRecycleView.XRecycleView>


        <com.smyhvae.view.SwipeView.CustomLoadMoreView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/swipe_load_more_footer"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/border_clo"/>


    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>


