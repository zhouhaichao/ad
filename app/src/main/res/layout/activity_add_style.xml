<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smyhvae.myapplication.AddStyleActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/paleVioletRed">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/addstyleinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增货品"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="保存"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#A7A5A5"
        android:layout_marginTop="40dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_styleinfo">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rl_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.smyhvae.view.ImageViewSubClass
                        android:id="@+id/imageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="价格"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"/>
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_main_list_bg"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/scv">
                        <LinearLayout
                            android:id="@+id/lay_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rl_right">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/codeinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="款号"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/stylecode"
                            android:hint="请输入款号"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:src="@drawable/plus"
                            android:visibility="invisible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/nameinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="名称"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/stylename"
                            android:hint="请输入名称"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:src="@drawable/plus"
                            android:visibility="invisible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/colorinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="颜色"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/colorString"
                            android:hint="请选择颜色"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="均色"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/plus"
                            android:id="@+id/addColor"
                            android:visibility="invisible"/>

                       <!-- <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addColor"
                            android:text="+"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:clickable="true"/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/sizeinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="尺码"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/sizeString"
                            android:hint="请选择尺码"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="均码"
                            android:singleLine="true"
                            android:ellipsize="end"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/plus"
                            android:id="@+id/addSize"
                            android:visibility="invisible"/>

                       <!-- <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addSize"
                            android:text="+"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:clickable="true"/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/supplierinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:text="厂商"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/supplier"
                            android:hint="请选择厂商"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/plus"
                            android:id="@+id/addSupplier"/>

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addSupplier"
                            android:text="+"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:clickable="true"/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/priceinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="进价"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/price"
                            android:text="0"
                            android:textColor="#F00"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:src="@drawable/plus"
                            android:visibility="invisible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/classinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="类别"
                            android:textColor="@color/black"/>
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:id="@+id/classString"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:background="@drawable/bg_edittext"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/plus"
                            android:id="@+id/addClass"/>

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addClass"
                            android:text="+"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:clickable="true"/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/brandinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="品牌"
                            android:gravity="right"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/brand"
                            android:hint="请选择品牌"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/plus"
                            android:id="@+id/addbrand"/>

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addbrand"
                            android:text="+"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:clickable="true"/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/seasoninfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="季节"
                            android:textColor="@color/black"/>
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:id="@+id/season"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/bg_edittext"
                            android:entries="@array/spingseason"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:src="@drawable/plus"
                            android:visibility="invisible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/remarkinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="备注"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/remark"
                            android:hint="请输入备注"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:src="@drawable/plus"
                            android:visibility="invisible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/suppliercodeinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="厂商款号"
                            android:gravity="right"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/suppliercode"
                            android:hint="请输入厂商款号"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:src="@drawable/plus"
                            android:visibility="invisible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/standbarcodeinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="标准条码"
                            android:gravity="right"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/standbarcode"
                            android:hint="请输入标准条码"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/plus"
                            android:id="@+id/addStandbarcode"/>

                       <!-- <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addStandbarcode"
                            android:text="+"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:clickable="true"/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/marketdateinfo">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="上架日期"
                            android:gravity="right"
                            android:textColor="@color/black"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/marketdate"
                            android:text="2018-01-29"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:focusableInTouchMode="false"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:src="@drawable/plus"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
